modules = ["java-graalvm22.3", "web", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HotelMaster"

[[workflows.workflow]]
name = "HotelMaster"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn tomcat7:run -Dmaven.tomcat.port=5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["java", "-jar", "target/dependency/webapp-runner.jar", "--port", "5000", "target/HotelMaster-1.0-SNAPSHOT.war"]
build = ["mvn", "clean", "package", "-DskipTests"]
